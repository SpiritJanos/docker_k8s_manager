<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.sample.controller.docker.DockerImageController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane prefHeight="562.0" prefWidth="1146.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="72.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="452.0" minHeight="10.0" prefHeight="417.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="261.0" minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
         
                     <TableView fx:id="dockerImages" prefHeight="428.0" prefWidth="1067.0" GridPane.rowIndex="1">
              <columns>
                <TableColumn fx:id="repository" prefWidth="226.0" text="REPOSITORY" />
                <TableColumn fx:id="tag" prefWidth="147.0" text="TAG" />
                  <TableColumn fx:id="id" prefWidth="278.0" text="IMAGE ID" />
                  <TableColumn fx:id="created" prefWidth="267.0" text="CREATED" />
                  <TableColumn fx:id="size" prefWidth="197.0" text="SIZE" />
              </columns>
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="2">
               <children>
                    <Button fx:id="returnToMenu" onAction="#goBack" prefHeight="25.0" prefWidth="113.0" text="Cancel" />
                  <Button fx:id="nextButton" mnemonicParsing="false" onAction="#containerOptions" prefHeight="25.0" prefWidth="113.0" text="Next" />
               </children>
               <GridPane.margin>
                  <Insets bottom="15.0" right="15.0" />
               </GridPane.margin>
            </HBox>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                   <Text text="Images" GridPane.columnSpan="2">
                     <font>
                        <Font size="23.0" />
                     </font>
                     <GridPane.margin>
                        <Insets left="15.0" />
                     </GridPane.margin>
                  </Text>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="1">
                     <children>
                        <Button fx:id="deleteImageButton" onAction="#deleteImages" mnemonicParsing="false" prefHeight="25.0" prefWidth="113.0" text="Delete image" />
                        <Button fx:id="searchImages" mnemonicParsing="false" onAction="#searchForImages" prefHeight="25.0" prefWidth="113.0" text="Search images">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </children>
</GridPane>
